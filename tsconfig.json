{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {},
    "outDir": "./dist",
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "src/test-providers.ts"
  ],
  "angularCompilerOptions": {}
}